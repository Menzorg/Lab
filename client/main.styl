global-reset()
nested-reset()
reset-font()
reset-box-model()
reset-body()
reset-table()
reset-table-cell()
reset-html5()

html, body
  font-family sans-serif
  overflow-x hidden
  width 100%
  height 100%

h1
  font-size 3.5em

h2
  font-size 3em

h3
  font-size 2.5em

h4
  font-size 2em

h5
  font-size 1.25em

h6
  font-size 0.75em

button, .button
  background transparent
  border 0
  font-size 1em
  padding 0 3px
  margin 0 5px
  cursor inherit
  border-radius 3px
  &:focus 
    outline 0

:invalid, :-moz-submit-invalid, :-moz-ui-invalid, :required, :optional, :-moz-placeholder, :-moz-focusring, -moz-ui-invalid:not(output)
  box-shadow none